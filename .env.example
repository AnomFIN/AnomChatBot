# AnomChatBot Configuration Template
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_IDS=your_telegram_user_id_here,optional_second_admin_id

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./data/whatsapp_session

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/conversations.db

# Application Settings
LOG_LEVEL=INFO
MAX_CONVERSATION_HISTORY=50
AUTO_SAVE_INTERVAL=60

# OpenAI Settings
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2000

# Security Settings
SECURE_SESSION=true
RATE_LIMIT_ENABLED=true

# Media Settings
MAX_IMAGE_SIZE=5242880
MAX_VIDEO_SIZE=52428800
MAX_AUDIO_SIZE=10485760
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp
SUPPORTED_VIDEO_FORMATS=mp4,mov,avi
SUPPORTED_AUDIO_FORMATS=mp3,wav,ogg,m4a

# Optional: Chrome/Chromium path for WhatsApp Web
# CHROME_PATH=/usr/bin/chromium-browser

# Web GUI Configuration
WEB_GUI_ENABLED=true
WEB_GUI_HOST=0.0.0.0
WEB_GUI_PORT=3001
TELEGRAM_ENABLED=true

